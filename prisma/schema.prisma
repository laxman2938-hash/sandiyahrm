// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Gallery Images
model GalleryImage {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  createdAt DateTime @default(now())

  @@map("gallery_images")
}

// Team Members
model TeamMember {
  id          Int     @id @default(autoincrement())
  name        String
  designation String?
  image       String
  createdAt   DateTime @default(now())

  @@map("team_members")
}

// Employment Categories
model EmploymentCategory {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  createdAt DateTime @default(now())

  @@map("employment_categories")
}

// Legal Documents
model LegalDocument {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  createdAt DateTime @default(now())

  @@map("legal_documents")
}

// Achievements
model Achievement {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  createdAt DateTime @default(now())

  @@map("achievements")
}

// Clients
model Client {
  id        Int     @id @default(autoincrement())
  name      String
  logo      String
  createdAt DateTime @default(now())

  @@map("clients")
}

// Contact Messages
model ContactMessage {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  phone     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  status    String  @default("pending") // pending, read, replied

  @@map("contact_messages")
}

// Testimonials
model Testimonial {
  id          Int     @id @default(autoincrement())
  name        String
  position    String
  photo       String?
  description String? @db.Text
  createdAt   DateTime @default(now())

  @@map("testimonials")
}

// Active Demand Letters
model DemandLetter {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  createdAt DateTime @default(now())

  @@map("demand_letters")
}
